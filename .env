COMPOSE_PROJECT_NAME=daps

# Valid values include "development" and "production"
# "production" requires TLS certificates! (See below)
# Set the protocol to https when changing this
OMEJDN_ENVIRONMENT="production"
OMEJDN_PROTOCOL="https"

# Options for Omejdn itself
# -------------------------

# The docker version to pull
OMEJDN_VERSION="1.7.0"

# Your domain (e.g. sso.example.org)
OMEJDN_DOMAIN="__HOST__"

# The path to mount Omejdn at.
# This should start but not end with '/'.
# Can be used for versioning if there are several versions (e.g. '/v3')
OMEJDN_PATH="/auth"

# Note that when you change the issuer identifier,
# you will need to edit the NginX config to ensure that
# the well-known server metadata endpoint for your new
# identifier points to Omejdn's
# /.well-known/oauth-authorization-server endpoint.
# See RFC 8414 for more information
OMEJDN_ISSUER="${OMEJDN_PROTOCOL}://${OMEJDN_DOMAIN}${OMEJDN_PATH}"

# Admin account
# CHANGE THE PASSWORD, or we will "hack" you
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="admin"

# Options for the Admin Web UI
# ----------------------------

# The docker version to pull
UI_VERSION="dev"

# The path to mount the UI at.
# This should never end in '/' and should not be equal to
# the path of omejdn above. Edit the NginX config if you
# really need them to be equal.
UI_PATH=""

# TLS settings for production
# ---------------------------

# These are necessary for production setups
# You may want to consider getting a certificate from
# a widely trusted certificate authority.
TLS_KEY="./dummy.key"
TLS_CERT="./dummy.cert"

# Django settings for Provide User Interface
DJANGO_SECRET_KEY=your-secret-key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,optimi.collab-cloud.eu,__HOST__
ALLOWED_HOSTS=localhost,127.0.0.1,optimi.collab-cloud.eu,__HOST__
CSRF_TRUSTED_ORIGINS=https://optimi.collab-cloud.eu,https://__HOST__

# Database settings for Provide User Interface
DJANGO_DB_PATH=/app/db.sqlite3

# CORS settings for Provide User Interface
DJANGO_CORS_ALLOWED_ORIGINS=*

# Custom settings
AUTHORIZATION=Basic YWRtaW46cGFzc3dvcmQ=

# SSL settings for Provide User Interface
REQUESTS_VERIFY_SSL=False

#Providing
CONNECTOR_URL=https://__HOST__/connector
BROKER_URL=https://__HOST__

# Consumption
CONNECTOR_BASE=https://__HOST__/connector
BASE_URL=https://__HOST__/connector/
BROKER=https://__HOST__/broker/infrastructure/

SERVER_BASE=https://__HOST__/tool-ui

# Auth service (session-based) running locally on port 8001
AUTH_SERVICE_BASE_URL=https://ds2demo.collab-cloud.eu
AUTH_SERVICE_PROFILE_ENDPOINT=/api/auth/me/
AUTH_SERVICE_SESSION_COOKIE=sessionid
AUTH_SERVICE_TIMEOUT=3
AUTH_SERVICE_VERIFY_SSL=False
AUTH_SERVICE_ALLOWLIST=/health,/metrics,/api/auth/profile
AUTH_SERVICE_ENFORCE=True
AUTH_SERVICE_LOGIN_PAGE=/api/auth/login-page/
AUTH_SERVICE_LOGOUT_PAGE=/api/logout/
AUTH_LOGOUT_REDIRECT_URL=https://ds2demo.collab-cloud.eu/consume/

# Consumed offers tracking
CONSUMED_OFFERS_BASE_URL=https://ds2demo.collab-cloud.eu/
CONSUMED_OFFERS_TIMEOUT=3
CONSUMED_OFFERS_VERIFY_SSL=False
